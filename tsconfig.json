{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext"],
    "target": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
  },
  "include": ["./src/**/*"],  // Não incluir dist aqui
  "exclude": ["./dist/**/*", "./test/**/*"]  // Exclui o diretório dist
}
